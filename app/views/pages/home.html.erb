<main class="homepage" style="background:#00524F; min-height:100vh; padding:16px;">
  <!-- ===== HERO ===== -->
  <section class="hero">
    <!-- Image d‚Äôarri√®re-plan -->
    <%= image_tag "plat-home.jpg", alt: "Assiette de sushi", loading: "eager" %>

    <div class="hero-content">
      <h2>G√©n√©rez vos repas et optimisez votre budget</h2>
      <%= link_to "Let‚Äôs goooo", recipes_path, class: "cta-btn" %>
    </div>
  </section>

  <!-- ===== RECETTES DU MOMENT ===== -->
  <section class="recipes-section">
  <h3>Les recettes du moment</h3>

  <% selected_ids = [13, 12, 14, 0, 11, 10] %>

  <% recipes_by_id = @recipes %>


  <% image_for = {
       14 => "salade-pate.png",    # Salade de p√¢tes √† la Julio
       13 => "Pate-saussice2.png", # Tagliatelles √† la tomate
       12 => "parmesan2.png",      # Spaghetti aux parmesan
        0 => "Spagetthi-bolo2.png",# Spaghetti bolognaise
       11 => "Nouille2.png",       # Nouilles √©pic√©es au poulet
       10 => "sushi2.png"          # Sushi & Makis avec Tempura
     } %>

  <div class="recipes-carousel">
    <% selected_ids.each do |rid| %>
      <% recipe = recipes_by_id[rid] %>

      <article class="recipe-card">
        <%= link_to recipe_path(recipe), class: "recipe-link" do %>
          <div class="image-wrapper">
            <%= image_tag(image_for[rid] || "placeholder.png", alt: recipe.name) %>
          </div>
          <h4><%= recipe.name %></h4>
          <div class="meta">Time</div>
          <div class="time"><%= "#{recipe.time} min" %></div>
        <% end %>

        <%= link_to "ü§ç", recipe_favorites_path(recipe),
              data: { turbo_method: :post },
              class: "fav-btn" %>
      </article>
    <% end %>
  </div>
</section>

</main>
