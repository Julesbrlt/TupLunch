  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= favorite.recipe.name %></h5>
            <p class="card-text"><%= favorite.recipe.description %></p>
               <%= link_to "show this recipe", recipe_path(favorite.recipe_id)%>
               <%= link_to "ðŸš®", recipe_favorite_path(favorite.recipe_id, favorite.id), data: { turbo_method: :delete, confirm: "Voulez-vous vraiment retirer cette recette de vos favoris ?"}%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
